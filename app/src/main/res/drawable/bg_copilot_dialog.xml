<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid fill -->
    <solid android:color="#020617" /> <!-- dark guard background -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional subtle border -->
    <stroke
        android:width="1dp"
        android:color="#111827" />

    <!-- Optional padding inside the shape -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />

</shape>