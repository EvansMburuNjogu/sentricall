<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#020617"
    app:cardCornerRadius="16dp"
    app:strokeColor="#111827"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvPrevSessionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listen to Audio — 21:34"
            android:textColor="@color/guard_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPrevSessionMeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Risk: Low • 24 Nov 2025"
            android:textColor="@color/guard_subtle"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>