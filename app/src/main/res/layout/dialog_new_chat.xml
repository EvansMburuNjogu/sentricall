<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#020617"
        app:strokeColor="#111827"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvDialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New AI chat"
                android:textColor="@color/guard_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDialogSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Give this chat a name so you can find it later."
                android:textColor="@color/guard_subtle"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilChatName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:boxStrokeColor="@color/guard_green"
                app:hintTextColor="@color/guard_subtle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etChatName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Chat name"
                    android:inputType="textCapWords"
                    android:textColor="@color/guard_text"
                    android:textColorHint="@color/guard_subtle" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/guard_subtle"
                    android:background="@android:color/transparent" />

                <Button
                    android:id="@+id/btnCreate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create"
                    android:textAllCaps="false"
                    android:textColor="#022C22"
                    android:backgroundTint="@color/guard_green"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>