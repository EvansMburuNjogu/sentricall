<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardSessionItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#020617"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="#111827"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Top row: type + time + risk badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvSessionType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Listen to Audio"
                android:textColor="@color/guard_text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSessionTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today, 10:32"
                android:textColor="@color/guard_subtle"
                android:textSize="11sp"
                android:layout_marginEnd="8dp" />

            <!-- Risk badge -->
            <TextView
                android:id="@+id/tvSessionRisk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low risk"
                android:textColor="#16A34A"
                android:textSize="11sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/bg_risk_pill_low" />
        </LinearLayout>

        <!-- Short description -->
        <TextView
            android:id="@+id/tvSessionSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guard found no suspicious phrases in this session."
            android:textColor="@color/guard_subtle"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>