<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/session_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guard_bg">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarSession"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/guard_bg"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:navigationIcon="@android:drawable/ic_media_previous"
        app:title="New session" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:id="@+id/sessionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp"
            android:paddingTop="50dp">

            <!-- Session type card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSessionType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#020617"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                app:strokeColor="#111827"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgSessionTypeIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_btn_speak_now" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvSessionTypeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Listen to Audio"
                            android:textColor="@color/guard_text"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvSessionTypeDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Guard listens for suspicious phrases in real time."
                            android:textColor="@color/guard_subtle"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Specific session component placeholder -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSessionSpecific"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#020617"
                app:cardCornerRadius="18dp"
                app:strokeColor="#111827"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:id="@+id/sessionSpecificContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvSessionSpecificTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Live audio monitoring"
                        android:textColor="@color/guard_text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSessionSpecificBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Guard will listen to this session and highlight phrases that look risky."
                        android:textColor="@color/guard_subtle"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- AI analytics summary -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAiAnalytics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#020617"
                app:cardCornerRadius="18dp"
                app:strokeColor="#111827"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvAiSummaryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI quick scan"
                        android:textColor="@color/guard_text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAiSummaryBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No fraud patterns detected yet. Guard will update this as the session runs."
                        android:textColor="@color/guard_subtle"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOpenAiChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open in AI chat"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="@color/guard_green"
                        android:textColor="#022C22"
                        app:cornerRadius="18dp"
                        app:icon="@android:drawable/ic_menu_send"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Report button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReportSession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report this session"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:layout_marginTop="22dp"
                android:backgroundTint="@android:color/transparent"
                android:textColor="#F97373"
                app:strokeColor="#4B5563"
                app:strokeWidth="1dp"
                app:cornerRadius="18dp" />

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>