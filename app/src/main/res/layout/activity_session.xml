<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/session_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guard_bg"
    android:fitsSystemWindows="true"
    android:paddingTop="50dp"
    tools:context=".SessionActivity">

    <!-- TOP APP BAR -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:src="@drawable/ic_back_arrow"
            android:tint="@android:color/white"
            android:contentDescription="Back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSessionHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session title"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSessionHeaderSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session subtitle / description"
                android:textColor="#9CA3AF"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- MAIN CONTENT -->
    <ScrollView
        android:id="@+id/scrollSessionContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintBottom_toTopOf="@id/btnReportSession"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layoutSessionInner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD 1: SESSION TYPE -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSessionType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#020617"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Icon + title + body -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgSessionIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:tint="@android:color/white"
                            android:src="@android:drawable/ic_btn_speak_now" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSessionTypeTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Session type title"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSessionTypeBody"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Short description of what this session type does."
                                android:textColor="#9CA3AF"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- SPACER -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp" />

                    <!-- AUDIO SPECTRUM + TIMER (LISTEN_AUDIO only) -->
                    <com.ke.sentricall.AudioSpectrumView
                        android:id="@+id/audioSpectrumView"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvSessionTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="00:00"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <!-- FILE INPUT (UPLOAD_MEDIA) -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/layoutFileUpload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:strokeColor="#1F2933"
                        app:strokeWidth="1dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_upload"
                                android:tint="#9CA3AF"
                                android:contentDescription="Choose file" />

                            <TextView
                                android:id="@+id/tvFileUploadHint"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Tap to choose a file"
                                android:textColor="#9CA3AF"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- WEBSITE URL INPUT (WEBSITE_LINK only) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutWebsiteUrl"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"
                        android:hint="Website URL"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:boxStrokeColor="#22C55E"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusBottomEnd="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etWebsiteUrl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textUri"
                            android:textColor="@android:color/white"
                            android:textColorHint="#9CA3AF" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- PRIMARY ACTION BUTTON -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStartStop"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        android:text="Start"
                        android:textAllCaps="false"
                        android:textColor="#022C22"
                        android:textSize="14sp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="#22C55E" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CARD 2: AI ANALYSIS -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAiAnalysis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#020617"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvAiAnalysisTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI analysis for this session"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAiAnalysisBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="When you start a session, AI insights will appear here."
                        android:textColor="#9CA3AF"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvOpenAiChatLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Open detailed AI chat for this session"
                        android:textColor="#22C55E"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- LAST RECORDING (audio or screen) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLastRecording"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="#020617"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageButton
                        android:id="@+id/btnPlayLastRecording"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@android:color/transparent"
                        android:src="@android:drawable/ic_media_play"
                        android:tint="@android:color/white"
                        android:contentDescription="Play" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvLastRecordingTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last recording"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvLastRecordingSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00 â€¢ Tap to play"
                            android:textColor="#9CA3AF"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- REPORT BUTTON -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReportSession"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Report this session"
        android:textAllCaps="false"
        android:textColor="#F97373"
        app:strokeColor="#F97373"
        app:strokeWidth="1dp"
        app:cornerRadius="999dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>