<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ke.sentricall">

    <!-- For launcher app query (if you ever need it) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <!-- Optional usage stats (for app usage tracking etc.) -->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <!-- Mic for audio listening -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Foreground service permissions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Foreground service for screen recording / MediaProjection (Android 14+ aware) -->
    <uses-permission
        android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION"
        tools:targetApi="34" />

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sentricall">

        <!-- Lock gate / app lock screen -->
        <activity
            android:name=".LockGateActivity"
            android:excludeFromRecents="true"
            android:exported="false" />

        <!-- Chat screen -->
        <activity
            android:name=".ChatActivity"
            android:exported="false" />

        <!-- Account / profile / guard home screen -->
        <activity
            android:name=".AccountActivity"
            android:exported="false" />

        <!-- Signup flow -->
        <activity
            android:name=".SignupActivity"
            android:exported="false" />

        <!-- Guard session detail screen (audio, screen, upload, link) -->
        <activity
            android:name=".SessionActivity"
            android:exported="false" />

        <!-- Previous sessions list -->
        <activity
            android:name=".PreviousSessionsActivity"
            android:exported="false" />

        <!-- ✅ Main router activity is now the launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Login screen (no launcher) -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" />

        <!-- Accessibility watcher for suspicious flows -->
        <service
            android:name=".SentricallAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/sentricall_accessibility_config" />
        </service>

        <!-- Foreground service for screen recording (MediaProjection) -->
        <service
            android:name=".ScreenRecordingService"
            android:exported="false"
            android:foregroundServiceType="mediaProjection" />

        <!-- File provider for sharing recordings/files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Old AppLockService (kept commented if unused)
        <service
            android:name=".AppLockService"
            android:exported="false" />
        -->

    </application>

</manifest>