<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ke.sentricall">

    <!-- Let us query launcher apps (for your app picker dialog) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <!-- (Optional) Still here if you later want UsageStats-based detection -->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sentricall">

        <!-- Lock gate screen shown on top of other apps when a protected app is opened -->
        <activity
            android:name=".LockGateActivity"
            android:excludeFromRecents="true"
            android:exported="false" />

        <!-- Your other activities -->
        <activity
            android:name=".ChatActivity"
            android:exported="false" />

        <activity
            android:name=".AccountActivity"
            android:exported="false" />

        <activity
            android:name=".SignupActivity"
            android:exported="false" />
        <activity android:name=".SessionActivity" />
        <activity android:name=".PreviousSessionsActivity" />


        <!-- Launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Accessibility-based watcher for Club mode -->
        <service
            android:name=".SentricallAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/sentricall_accessibility_config" />
        </service>

        <!-- If you still keep AppLockService but no longer use it, you can either:
             - remove this block, or
             - leave it commented out.
        -->
        <!--
        <service
            android:name=".AppLockService"
            android:exported="false" />
        -->

    </application>

</manifest>